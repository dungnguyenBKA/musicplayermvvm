<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailSongFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_margin="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/somg_iamge_detail"
        android:src="@drawable/ic_music"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:textSize="25dp"
        android:text="Demo Title"
        android:id="@+id/song_title_detail"
        android:layout_marginTop="20dp"
        android:layout_below="@id/somg_iamge_detail"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Demo Artist"
        android:id="@+id/song_artist_detail"
        android:layout_marginTop="20dp"
        android:layout_below="@id/song_title_detail"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>